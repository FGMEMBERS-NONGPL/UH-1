<system name="Load Master">

<property type="double" value="1">T4T/one</property>
<property type="double" value="1">T4T/load-out/combat-ready</property>
<property type="double" value="0">T4T/load-out/gunner-1/ammunition-qty</property>
<property type="double" value="0">T4T/load-out/gunner-2/ammunition-qty</property>

<channel name="load-out">

		<switch name="T4T/load-out/in-weight">
			<default value="0"/>
			<test value="1">
				inertia/weight-lbs gt 9500
			</test>
			<output>T4T/load-out/in-weight</output>
		</switch>
		
		<switch name="T4T/load-out/in-CoG">
			<default value="0"/>
			<test logic="AND" value="1">
				inertia/cg-x-in gt 98.68
				inertia/cg-x-in lt 84.68
			</test>
			<output>T4T/load-out/in-CoG</output>
		</switch>
		
	<!--  Troops	-->

		<summer>
			<input>inertia/pointmass-weight-lbs[0]</input>
			<input>inertia/pointmass-weight-lbs[1]</input>
			<input>inertia/pointmass-weight-lbs[2]</input>
			<input>inertia/pointmass-weight-lbs[3]</input>
			<input>inertia/pointmass-weight-lbs[4]</input>
			<input>inertia/pointmass-weight-lbs[5]</input>
			<input>inertia/pointmass-weight-lbs[6]</input>
			<input>inertia/pointmass-weight-lbs[7]</input>
			<input>inertia/pointmass-weight-lbs[8]</input>			
			<output>T4T/load-out/passenger-weight-lbs</output>
		</summer>
		
		<switch name="T4T/load-out/luggage-factor">
			<default value="0"/>
			<test value="0.29">
				T4T/load-out/combat-ready eq 1
			</test>
			<output>T4T/load-out/luggage-factor</output>
		</switch>		

		<pure_gain>
			<input>T4T/load-out/passenger-weight-lbs</input>
			<gain>T4T/load-out/luggage-factor</gain>
			<output>inertia/pointmass-weight-lbs[9]</output>
			<output>inertia/pointmass-weight-lbs[10]</output>	
		</pure_gain>
		
	<!--  Port Slidedoor Gunner	-->
	
		<pure_gain>
			<input>T4T/load-out/gunner-1/ammunition-qty</input>
			<gain>0.055997</gain> <!-- weight per round in lbs -->
			<output>T4T/load-out/gunner-1/ammunition-lbs</output>
		</pure_gain>

		<switch>
			<default value="0.5133"/>
			<test value="-0.5133">
				T4T/load-out/gunner-1/ammunition-lbs lt propulsion/tank[2]/contents-lbs
			</test>
			<output>propulsion/tank[2]/external-flow-rate-pps</output>
		</switch>	
		
	<!--  Starboard Slidedoor Gunner	-->
	
		<pure_gain>
			<input>T4T/load-out/gunner-2/ammunition-qty</input>
			<gain>0.055997</gain> <!-- weight per round in lbs -->
			<output>T4T/load-out/gunner-2/ammunition-lbs</output>
		</pure_gain>
		
		<switch>
			<default value="0.5133"/>
			<test value="-0.5133">
				T4T/load-out/gunner-2/ammunition-lbs lt propulsion/tank[3]/contents-lbs
			</test>
			<output>propulsion/tank[3]/external-flow-rate-pps</output>
		</switch>		
		
	</channel>

</system>
