<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <!-- Main fuselage -->
  <model>
    <path>Aircraft/UH-1/Models/main-T4T.xml</path>
    <offsets>
      <x-m>4.7</x-m>
      <z-m>0.8</z-m>
    </offsets>	
  </model>

  <!-- Engine -->
  <model>
    <path>Aircraft/UH-1/Models/monoengine.xml</path>
    <offsets>
      <x-m>4.7</x-m>
      <z-m>0.8</z-m>
    </offsets>	
  </model>

  <!-- Rotor principale -->
  <model>
    <path>Aircraft/UH-1/Models/MainRotor/mainrotor-T4T.xml</path>
    <offsets>
      <z-m>1.9</z-m>
    </offsets>
  </model>

  <!-- Interieur -->
  <model>
    <name>Interieur</name>
    <path>Aircraft/UH-1/Models/Interior/interior-T4T.xml</path>
    <offsets>
      <x-m>4.7</x-m>
      <z-m>0.8</z-m>
    </offsets>	
  </model>

  <!-- For Rembrandt -->
  <animation>
    <type>noshadow</type>
    <object-name>Interieur</object-name>
  </animation>

  <!-- Rotor de queue -->
  <model>
    <path>Aircraft/UH-1/Models/TailRotor/tailrotor-T4T.xml</path>
    <offsets>
      <x-m>8.95</x-m>
      <y-m>-0.473</y-m>
      <z-m>2.35</z-m>
      <roll-deg>90</roll-deg>
    </offsets>
  </model>

  <!-- Une ombre pour OSG -->
  <model>
    <path>Aircraft/UH-1/Models/shadow.xml</path>
    <offsets>
      <x-m>-1.299</x-m>
      <y-m>0.000</y-m>
      <z-m>-1.600</z-m>
    </offsets>
  </model>

</PropertyList>

